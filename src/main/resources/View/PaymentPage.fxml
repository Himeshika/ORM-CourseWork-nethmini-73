<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="apPaymentPage" prefHeight="650.0" prefWidth="1100.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.ijse.controller.PaymentManagementPageController">

    <!-- Header -->
    <Label layoutX="50.0" layoutY="30.0" text="Payment Management" textFill="#1f3a93" underline="true">
        <font>
            <Font name="FreeSerif Bold" size="36.0" />
        </font>
    </Label>

    <Button fx:id="btnGoBack" layoutX="920.0" layoutY="30.0" onAction="#btnGoBack" style="-fx-background-color: #34495E; -fx-text-fill: white; -fx-font-size: 16px;" text="Back" />

    <!-- Form Section -->
    <AnchorPane layoutX="50.0" layoutY="100.0" prefHeight="220.0" prefWidth="600.0">

        <Label layoutX="30.0" layoutY="20.0" text="Payment Type">
            <font><Font size="16.0" /></font>
        </Label>
        <ComboBox fx:id="cmbPaymentType" layoutX="200.0" layoutY="20.0" prefHeight="30.0" prefWidth="300.0" />

        <Label layoutX="30.0" layoutY="70.0" text="Amount">
            <font><Font size="16.0" /></font>
        </Label>
        <TextField fx:id="txtAmount" layoutX="200.0" layoutY="70.0" prefHeight="30.0" prefWidth="300.0" promptText="Enter amount" />

        <Label layoutX="30.0" layoutY="120.0" text="Status">
            <font><Font size="16.0" /></font>
        </Label>
        <ComboBox fx:id="cmbStatus" layoutX="200.0" layoutY="120.0" prefHeight="30.0" prefWidth="200.0" />

        <Label layoutX="30.0" layoutY="170.0" text="Student Email">
            <font><Font size="16.0" /></font>
        </Label>
        <TextField fx:id="txtStudentEmail" layoutX="200.0" layoutY="170.0" prefHeight="30.0" prefWidth="200.0" promptText="Enter student Email" />
        <Button layoutX="410.0" layoutY="170.0" onAction="#checkStudentAvailability" prefHeight="30.0" prefWidth="150.0" style="-fx-background-color: #26c6da; -fx-text-fill: white;" text="Check" />
        <TextField fx:id="stNameTxt" layoutX="570.0" layoutY="170.0" prefHeight="30.0" prefWidth="300.0" promptText="Student Name" />
   
       <!-- Buttons -->
       <AnchorPane layoutX="620.0" layoutY="-39.0" prefHeight="200.0" prefWidth="250.0">
           <children>
               <Button fx:id="btnSavePayment" layoutX="60.0" layoutY="20.0" onAction="#savePayment" prefHeight="35.0" prefWidth="120.0" style="-fx-background-color: #2ecc71; -fx-text-fill: white;" text="Save" />
               <Button fx:id="btnUpdatePayment" layoutX="60.0" layoutY="70.0" onAction="#updatePayment" prefHeight="35.0" prefWidth="120.0" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Update" />
               <Button fx:id="btnDeletePayment" layoutX="60.0" layoutY="120.0" onAction="#deletePayment" prefHeight="35.0" prefWidth="120.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Delete" />
           </children>
       </AnchorPane>
    </AnchorPane>

    <!-- Table -->
    <TableView fx:id="tblPayments" layoutX="50.0" layoutY="350.0" prefHeight="250.0" prefWidth="1000.0" style="-fx-background-color: white; -fx-border-color: #bdbdbd; -fx-font-size: 14px;">
        <columns>
            <TableColumn fx:id="colId" prefWidth="80.0" text="ID" />
            <TableColumn fx:id="colDate" prefWidth="150.0" text="Date" />
            <TableColumn fx:id="colType" prefWidth="200.0" text="Type" />
            <TableColumn fx:id="colAmount" prefWidth="150.0" text="Amount" />
            <TableColumn fx:id="colStatus" prefWidth="150.0" text="Status" />
            <TableColumn fx:id="colStudent" prefWidth="200.0" text="Student" />
        </columns>
    </TableView>

</AnchorPane>
