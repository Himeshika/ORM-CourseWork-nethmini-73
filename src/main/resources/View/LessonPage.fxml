<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="apLessonPage" prefHeight="650.0" prefWidth="1150.0" style="-fx-background-color: white;"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="edu.ijse.controller.LessonManagementPageController">

    <!-- Header -->
    <Label layoutX="50.0" layoutY="30.0" text="Lesson Management" textFill="#1f3a93" underline="true">
        <font>
            <Font name="FreeSerif Bold" size="36.0" />
        </font>
    </Label>

    <Button fx:id="btnGoBack" layoutX="980.0" layoutY="30.0" onAction="#btnGoBack"
            style="-fx-background-color: #34495E; -fx-text-fill: white; -fx-font-size: 16px;"
            text="Back" />

    <!-- Table -->
    <TableView fx:id="tblLessons" layoutX="50.0" layoutY="400.0" onMouseClicked="#tableClicked"
               prefHeight="220.0" prefWidth="1050.0"
               style="-fx-background-color: white; -fx-border-color: #bdbdbd; -fx-font-size: 14px;">
        <columns>
            <TableColumn fx:id="colLessonID" prefWidth="80.0" text="ID" />
            <TableColumn fx:id="colLessonName" prefWidth="200.0" text="Lesson Name" />
            <TableColumn fx:id="colStudent" prefWidth="200.0" text="Student" />
            <TableColumn fx:id="colInstructor" prefWidth="200.0" text="Instructor" />
            <TableColumn fx:id="colCourse" prefWidth="200.0" text="Course" />
            <TableColumn fx:id="colDate" prefWidth="150.0" text="Date" />
            <TableColumn fx:id="colStartTime" prefWidth="100.0" text="Start Time" />
            <TableColumn fx:id="colEndTime" prefWidth="100.0" text="End Time" />
        </columns>
    </TableView>

    <!-- Form Section -->
    <AnchorPane layoutX="60.0" layoutY="100.0" prefHeight="270.0" prefWidth="600.0">

        <Label layoutX="30.0" layoutY="20.0" text="Student">
            <font><Font name="Mandali" size="16.0" /></font>
        </Label>
        <ComboBox fx:id="comboStudent" layoutX="200.0" layoutY="20.0" prefHeight="30.0" prefWidth="300.0" />

        <Label layoutX="30.0" layoutY="65.0" text="Instructor">
            <font><Font name="Mandali" size="16.0" /></font>
        </Label>
        <ComboBox fx:id="comboInstructor" layoutX="200.0" layoutY="65.0" prefHeight="30.0" prefWidth="300.0" />

        <Label layoutX="30.0" layoutY="110.0" text="Course">
            <font><Font name="Mandali" size="16.0" /></font>
        </Label>
        <ComboBox fx:id="comboCourse" layoutX="200.0" layoutY="110.0" prefHeight="30.0" prefWidth="300.0" />

        <Label layoutX="30.0" layoutY="155.0" text="Lesson Date">
            <font><Font name="Mandali" size="16.0" /></font>
        </Label>
        <DatePicker fx:id="dateLesson" layoutX="200.0" layoutY="155.0" prefHeight="30.0" prefWidth="300.0" />

        <Label layoutX="30.0" layoutY="200.0" text="Start Time">
            <font><Font name="Mandali" size="16.0" /></font>
        </Label>
        <TextField fx:id="txtStartTime" layoutX="200.0" layoutY="200.0" prefHeight="30.0" prefWidth="120.0" promptText="HH:mm" />

        <Label layoutX="340.0" layoutY="200.0" text="End Time">
            <font><Font name="Mandali" size="16.0" /></font>
        </Label>
        <TextField fx:id="txtEndTime" layoutX="430.0" layoutY="200.0" prefHeight="30.0" prefWidth="120.0" promptText="HH:mm" />

        <Label layoutX="30.0" layoutY="245.0" text="Lesson Name">
            <font><Font name="Mandali" size="16.0" /></font>
        </Label>
        <TextField fx:id="txtLessonName" layoutX="200.0" layoutY="245.0" prefHeight="30.0" prefWidth="350.0" />
    </AnchorPane>

    <!-- Buttons Section -->
    <AnchorPane layoutX="750.0" layoutY="120.0" prefHeight="200.0" prefWidth="250.0">
        <children>
            <Button fx:id="btnSaveLesson" layoutX="65.0" layoutY="20.0" onAction="#btnSaveLesson"
                    prefHeight="35.0" prefWidth="120.0"
                    style="-fx-background-color: #2ecc71; -fx-text-fill: white;" text="Save" />
            <Button fx:id="btnUpdateLesson" layoutX="65.0" layoutY="70.0" onAction="#btnUpdateLesson"
                    prefHeight="35.0" prefWidth="120.0"
                    style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Update" />
            <Button fx:id="btnDeleteLesson" layoutX="65.0" layoutY="120.0" onAction="#btnDeleteLesson"
                    prefHeight="35.0" prefWidth="120.0"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Delete" />
        </children>
    </AnchorPane>

</AnchorPane>
