<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="apCoursePage" prefHeight="600.0" prefWidth="1050.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.ijse.controller.CourseManagementPageController">

    <!-- Header -->
    <Label layoutX="50.0" layoutY="30.0" text="Course Management" textFill="#1f3a93" underline="true">
        <font>
            <Font name="FreeSerif Bold" size="36.0" />
        </font>
    </Label>

    <Button fx:id="btnGoBack" layoutX="913.0" layoutY="30.0" onAction="#btnGoBack" style="-fx-background-color: #34495E; -fx-text-fill: white; -fx-font-size: 16px;" text="Back" />

    <!-- Table -->
    <TableView fx:id="tblCourses" layoutX="50.0" layoutY="370.0" onMouseClicked="#tableonClick" prefHeight="210.0" prefWidth="953.0" style="-fx-background-color: white; -fx-border-color: #bdbdbd; -fx-font-size: 14px;">
        <columns>
            <TableColumn fx:id="colCourseID" prefWidth="80.0" text="ID" />
            <TableColumn fx:id="colCourseName" prefWidth="250.0" text="Course Name" />
            <TableColumn fx:id="colDuration" prefWidth="200.0" text="Duration" />
            <TableColumn fx:id="colFee" prefWidth="200.0" text="Fee (Rs.)" />
            <TableColumn fx:id="colInstructors" prefWidth="223.0" text="Instructors" />
        </columns>
    </TableView>

    <!-- Form Section -->
    <AnchorPane layoutX="60.0" layoutY="100.0" prefHeight="235.0" prefWidth="550.0">

        <Label layoutX="30.0" layoutY="20.0" text="Course Name">
            <font><Font name="Mandali" size="16.0" /></font>
        </Label>
        <TextField fx:id="txtCourseName" layoutX="200.0" layoutY="20.0" prefHeight="30.0" prefWidth="300.0" />

        <Label layoutX="30.0" layoutY="70.0" text="Duration">
            <font><Font name="Mandali" size="16.0" /></font>
        </Label>
        <TextField fx:id="txtDuration" layoutX="200.0" layoutY="70.0" prefHeight="30.0" prefWidth="300.0" promptText="e.g. 3 Months" />

        <Label layoutX="30.0" layoutY="120.0" text="Fee">
            <font><Font name="Mandali" size="16.0" /></font>
        </Label>
        <TextField fx:id="txtFee" layoutX="200.0" layoutY="120.0" prefHeight="30.0" prefWidth="300.0" promptText="e.g. 25000.00" />

        <Label layoutX="30.0" layoutY="170.0" text="Instructor(s)">
            <font><Font name="Mandali" size="16.0" /></font>
        </Label>
        <ComboBox fx:id="comboInstructor" layoutX="200.0" layoutY="170.0" prefHeight="30.0" prefWidth="200.0" />
        <Button fx:id="btnAddInstructor" layoutX="420.0" layoutY="170.0" onAction="#btnAddInstructor" prefHeight="30.0" prefWidth="80.0" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Add +" />
    </AnchorPane>

    <!-- Buttons Section -->
    <AnchorPane layoutX="750.0" layoutY="110.0" prefHeight="200.0" prefWidth="200.0">
        <children>
            <Button fx:id="btnSaveCourse" layoutX="40.0" layoutY="20.0" onAction="#btnSaveCourse" prefHeight="35.0" prefWidth="120.0" style="-fx-background-color: #2ecc71; -fx-text-fill: white;" text="Save" />
            <Button fx:id="btnUpdateCourse" layoutX="40.0" layoutY="70.0" onAction="#btnUpdateCourse" prefHeight="35.0" prefWidth="120.0" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Update" />
            <Button fx:id="btnDeleteCourse" layoutX="40.0" layoutY="120.0" onAction="#btnDeleteCourse" prefHeight="35.0" prefWidth="120.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Delete" />
            <Button fx:id="btnClear" layoutX="40.0" layoutY="170.0" onAction="#btnClearOnAction" prefHeight="35.0" prefWidth="120.0" style="-fx-background-color: #607D8B; -fx-text-fill: white;" text="Clear" />
        </children>
    </AnchorPane>

</AnchorPane>
