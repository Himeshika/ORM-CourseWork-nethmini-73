<AnchorPane fx:id="dashboardRoot" prefHeight="650.0" prefWidth="1100.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.ijse.controller.">
    <children>

        <AnchorPane prefHeight="650.0" prefWidth="200.0" style="-fx-background-color: #37474F;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>

                <ImageView fitHeight="100.0" fitWidth="120.0" layoutX="40.0" layoutY="15.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/logo_no_bg.png" />
                    </image>
                </ImageView>

                <VBox layoutX="10.0" layoutY="130.0" prefWidth="180.0" spacing="10.0">
                    <children>
                        <Button fx:id="btnCourse" mnemonicParsing="false" onAction="#openCoursePage" prefHeight="40.0" prefWidth="180.0" style="-fx-background-color: #3498DB; -fx-background-radius: 5;" text="Course" textFill="WHITE">
                            <font><Font size="16.0" /></font>
                        </Button>
                        <Button fx:id="btnInstructor" mnemonicParsing="false" onAction="#openInstructorPage" prefHeight="40.0" prefWidth="180.0" style="-fx-background-color: #2ecc71; -fx-background-radius: 5;" text="Instructor" textFill="WHITE">
                            <font><Font size="16.0" /></font>
                        </Button>
                        <Button fx:id="btnStudent" mnemonicParsing="false" onAction="#openStudentPage" prefHeight="40.0" prefWidth="180.0" style="-fx-background-color: #9b59b6; -fx-background-radius: 5;" text="Student" textFill="WHITE">
                            <font><Font size="16.0" /></font>
                        </Button>
                        <Button fx:id="btnLesson" mnemonicParsing="false" onAction="#openLessonPage" prefHeight="40.0" prefWidth="180.0" style="-fx-background-color: #f1c40f; -fx-background-radius: 5;" text="Lesson" textFill="WHITE">
                            <font><Font size="16.0" /></font>
                        </Button>
                        <Button fx:id="btnPayment" mnemonicParsing="false" onAction="#openPaymentPage" prefHeight="40.0" prefWidth="180.0" style="-fx-background-color: #e67e22; -fx-background-radius: 5;" text="Payment" textFill="WHITE">
                            <font><Font size="16.0" /></font>
                        </Button>
                        <Button fx:id="btnUser" mnemonicParsing="false" onAction="#openUserPage" prefHeight="40.0" prefWidth="180.0" style="-fx-background-color: #18ffff; -fx-background-radius: 5;" text="User" textFill="#2c3e50">
                            <font><Font size="16.0" /></font>
                        </Button>
                    </children>
                </VBox>

                <Button fx:id="btnLogout" layoutX="10.0" layoutY="590.0" mnemonicParsing="false" onAction="#handleLogout" prefHeight="35.0" prefWidth="80.0" style="-fx-background-color: #e74c3c; -fx-background-radius: 5;" text="Log out" textFill="WHITE">
                    <font><Font size="14.0" /></font>
                    <cursor><Cursor fx:constant="OPEN_HAND" /></cursor>
                </Button>
            </children>
        </AnchorPane>

        <AnchorPane fx:id="apDB" layoutX="200.0" prefHeight="650.0" prefWidth="900.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="200.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Rectangle fill="#F5F5DC" opacity="0.8" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />

                <AnchorPane layoutX="0.0" layoutY="0.0" prefHeight="70.0" prefWidth="900.0" style="-fx-background-color: #2C3E50;">
                    <children>
                        <Label layoutX="320.0" layoutY="15.0" text="Dashboard" textFill="#f39c12">
                            <font><Font size="30.0" /></font>
                        </Label>
                    </children>
                </AnchorPane>
                <Separator layoutX="0.0" layoutY="70.0" prefHeight="10.0" prefWidth="900.0" style="-fx-background-color: #000;" />


                <HBox layoutX="30.0" layoutY="100.0" prefHeight="150.0" prefWidth="840.0" spacing="30.0">
                    <children>
                        <AnchorPane prefHeight="150.0" prefWidth="260.0" style="-fx-background-color: #FF9C73; -fx-background-radius: 15;">
                            <effect><DropShadow color="#00000033" offsetX="3.0" offsetY="3.0" radius="7.0" /></effect>
                            <children>
                                <ImageView fitHeight="80.0" fitWidth="80.0" layoutX="15.0" layoutY="35.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../images/student_count_icon.png" />
                                    </image>
                                </ImageView>
                                <Label layoutX="100.0" layoutY="10.0" prefHeight="30.0" prefWidth="150.0" text="ENROLLMENT" textFill="WHITE">
                                    <font><Font name="System Bold" size="18.0" /></font>
                                </Label>
                                <Label fx:id="student_count" layoutX="100.0" layoutY="50.0" prefHeight="60.0" prefWidth="150.0" text="10" textFill="WHITE">
                                    <font><Font name="System Bold" size="40.0" /></font>
                                </Label>
                            </children>
                        </AnchorPane>
                        <AnchorPane prefHeight="150.0" prefWidth="260.0" style="-fx-background-color: #9B86BD; -fx-background-radius: 15;">
                            <effect><DropShadow color="#00000033" offsetX="3.0" offsetY="3.0" radius="7.0" /></effect>
                            <children>
                                <ImageView fitHeight="80.0" fitWidth="80.0" layoutX="15.0" layoutY="35.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../images/courses_count_icon.png" />
                                    </image>
                                </ImageView>
                                <Label layoutX="100.0" layoutY="10.0" prefHeight="30.0" prefWidth="150.0" text="COURSES" textFill="WHITE">
                                    <font><Font name="System Bold" size="18.0" /></font>
                                </Label>
                                <Label fx:id="course_count" layoutX="100.0" layoutY="50.0" prefHeight="60.0" prefWidth="150.0" text="5" textFill="WHITE">
                                    <font><Font name="System Bold" size="40.0" /></font>
                                </Label>
                            </children>
                        </AnchorPane>
                        <AnchorPane prefHeight="150.0" prefWidth="260.0" style="-fx-background-color: #387478; -fx-background-radius: 15;">
                            <effect><DropShadow color="#00000033" offsetX="3.0" offsetY="3.0" radius="7.0" /></effect>
                            <children>
                                <ImageView fitHeight="80.0" fitWidth="80.0" layoutX="15.0" layoutY="35.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../images/admin_count.png" />
                                    </image>
                                </ImageView>
                                <Label layoutX="100.0" layoutY="10.0" prefHeight="30.0" prefWidth="150.0" text="ADMINS" textFill="WHITE">
                                    <font><Font name="System Bold" size="18.0" /></font>
                                </Label>
                                <Label fx:id="admin_count" layoutX="100.0" layoutY="50.0" prefHeight="60.0" prefWidth="150.0" text="2" textFill="WHITE">
                                    <font><Font name="System Bold" size="40.0" /></font>
                                </Label>
                            </children>
                        </AnchorPane>
                    </children>
                </HBox>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
