<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<AnchorPane fx:id="apStudentPage" prefHeight="650.0" prefWidth="1100.0" style="-fx-background-color: #f4f7f9;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.ijse.controller.StudentManagementPageController">
    <children>

        <AnchorPane prefHeight="70.0" prefWidth="1100.0" style="-fx-background-color: #2c3e50;" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Label layoutX="30.0" layoutY="15.0" text="Student Management" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="30.0" />
                    </font>
                </Label>
                <Button fx:id="btnGoBack" layoutX="980.0" layoutY="18.0" onAction="#btnGoBack" prefHeight="35.0" prefWidth="80.0" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-background-radius: 5;" text="Back">
                    <font><Font size="14.0" /></font>
                </Button>
            </children>
        </AnchorPane>

        <AnchorPane layoutX="20.0" layoutY="90.0" prefHeight="540.0" prefWidth="1060.0" style="-fx-background-color: white; -fx-background-radius: 10;">
            <effect>
                <DropShadow color="#00000033" offsetX="2.0" offsetY="2.0" radius="5.0" />
            </effect>
            <children>

                <HBox layoutX="20.0" layoutY="20.0" prefHeight="280.0" prefWidth="1020.0" spacing="20.0">
                    <VBox prefHeight="280.0" prefWidth="500.0" spacing="15.0">
                        <Label text="Student Details" textFill="#1f3a93">
                            <font><Font name="System Bold" size="18.0" /></font>
                        </Label>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <Label prefWidth="120.0" text="Student Name" />
                            <TextField fx:id="txtName" prefWidth="350.0" promptText="Enter full name" />
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <Label prefWidth="120.0" text="Email" />
                            <TextField fx:id="txtEmail" prefWidth="350.0" promptText="Enter email" />
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <Label prefWidth="120.0" text="Contact No" />
                            <TextField fx:id="txtContact" prefWidth="350.0" promptText="Enter contact number" />
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <Label prefWidth="120.0" text="Address" />
                            <TextField fx:id="txtAddress" prefWidth="350.0" promptText="Enter address" />
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <Label prefWidth="120.0" text="Date of Birth" />
                            <DatePicker fx:id="dateDob" prefWidth="350.0" />
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <Label prefWidth="120.0" text="Registration Date" />
                            <DatePicker fx:id="dateReg" prefWidth="350.0" />
                        </HBox>
                    </VBox>

                    <VBox prefHeight="280.0" prefWidth="500.0" spacing="15.0">
                        <Label text="Payment &amp; Course" textFill="#1f3a93">
                            <font><Font name="System Bold" size="18.0" /></font>
                        </Label>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <Label prefWidth="150.0" text="Courses" />
                            <ComboBox fx:id="comboCourses" prefWidth="200.0" promptText="Select a course" />
                            <Button fx:id="btnACoursesID" onAction="#btnAddCourses" prefHeight="30.0" prefWidth="130.0" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 5;" text="Add Course" />
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <Label prefWidth="150.0" text="Payment Amount" />
                            <TextField fx:id="txtPaymentAmount" prefWidth="350.0" promptText="Enter payment amount" />
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <Label prefWidth="150.0" text="Payment Type" />
                            <ComboBox fx:id="comboPaymentType" prefWidth="350.0" promptText="Select payment type" />
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <Label prefWidth="150.0" text="Payment Status" />
                            <ComboBox fx:id="comboPaymentStatus" prefWidth="350.0" promptText="Select payment status" />
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <Label prefWidth="150.0" text="Payment Date" />
                            <DatePicker fx:id="datePayment" prefWidth="350.0" />
                        </HBox>
                        <HBox alignment="CENTER" spacing="20.0" prefHeight="60.0">
                            <Button fx:id="btnSave" onAction="#btnSave" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-background-radius: 5;" text="SAVE" />
                            <Button fx:id="btnUpdate" onAction="#btnUpdate" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 5;" text="UPDATE" />
                            <Button fx:id="btnDelete" onAction="#btnDelete" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 5;" text="DELETE" />
                        </HBox>
                    </VBox>
                </HBox>

                <TableView fx:id="tblStudents" layoutX="20.0" layoutY="320.0" prefHeight="200.0" prefWidth="1020.0" style="-fx-background-color: #F5F5F5; -fx-background-radius: 10;">
                    <effect>
                        <DropShadow color="#00000033" offsetX="2.0" offsetY="2.0" radius="5.0" />
                    </effect>
                    <columns>
                        <TableColumn fx:id="colID" prefWidth="70.0" text="ID" />
                        <TableColumn fx:id="colName" prefWidth="150.0" text="Name" />
                        <TableColumn fx:id="colEmail" prefWidth="200.0" text="Email" />
                        <TableColumn fx:id="colContact" prefWidth="120.0" text="Contact" />
                        <TableColumn fx:id="colAddress" prefWidth="150.0" text="Address" />
                        <TableColumn fx:id="colDob" prefWidth="100.0" text="DOB" />
                        <TableColumn fx:id="colRegDate" prefWidth="100.0" text="Reg Date" />
                        <TableColumn fx:id="colProgress" prefWidth="80.0" text="Progress" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>

            </children>
        </AnchorPane>
    </children>
</AnchorPane>