<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<AnchorPane fx:id="apUserPage" prefHeight="650.0" prefWidth="1100.0" style="-fx-background-color: #f4f7f9;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.ijse.controller.UserManagementPageController">
    <children>

        <AnchorPane prefHeight="70.0" prefWidth="1100.0" style="-fx-background-color: #2c3e50;" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Label layoutX="30.0" layoutY="15.0" text="User Management" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="30.0" />
                    </font>
                </Label>
                <Button fx:id="btnGoBack" layoutX="980.0" layoutY="18.0" onAction="#btnGoBack" prefHeight="35.0" prefWidth="80.0" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-background-radius: 5;" text="Back">
                    <font><Font size="14.0" /></font>
                </Button>
            </children>
        </AnchorPane>

        <AnchorPane layoutX="20.0" layoutY="90.0" prefHeight="540.0" prefWidth="1060.0" style="-fx-background-color: white; -fx-background-radius: 10;">
            <effect>
                <DropShadow color="#00000033" offsetX="2.0" offsetY="2.0" radius="5.0" />
            </effect>
            <children>

                <HBox layoutX="20.0" layoutY="20.0" prefHeight="250.0" prefWidth="1020.0" spacing="20.0">
                    <VBox prefHeight="250.0" prefWidth="500.0" spacing="15.0">
                        <Label text="User Details" textFill="#1f3a93">
                            <font><Font name="System Bold" size="18.0" /></font>
                        </Label>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <Label prefWidth="120.0" text="Username" />
                            <TextField fx:id="txtUsername" prefWidth="350.0" promptText="Enter username" />
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <Label prefWidth="120.0" text="Email" />
                            <TextField fx:id="txtEmail" prefWidth="350.0" promptText="example@mail.com" />
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <Label prefWidth="120.0" text="Password" />
                            <PasswordField fx:id="txtPassword" prefWidth="350.0" promptText="Enter password" />
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <Label prefWidth="120.0" text="Role" />
                            <ComboBox fx:id="comboRole" prefWidth="350.0" promptText="Select role" />
                        </HBox>
                    </VBox>

                    <AnchorPane prefHeight="250.0" prefWidth="500.0">
                        <HBox alignment="CENTER" layoutX="50.0" layoutY="100.0" prefHeight="100.0" prefWidth="400.0" spacing="30.0">
                            <Button fx:id="btnSaveUser" onAction="#btnSaveUser" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-background-radius: 5;" text="SAVE" />
                            <Button fx:id="btnUpdateUser" onAction="#btnUpdateUser" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 5;" text="UPDATE" />
                            <Button fx:id="btnDeleteUser" onAction="#btnDeleteUser" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 5;" text="DELETE" />
                        </HBox>
                    </AnchorPane>
                </HBox>

                <TableView fx:id="tblUsers" layoutX="20.0" layoutY="290.0" onSort="#clickOnTable" prefHeight="230.0" prefWidth="1020.0" style="-fx-background-color: #F5F5F5; -fx-background-radius: 10;">
                    <effect>
                        <DropShadow color="#00000033" offsetX="2.0" offsetY="2.0" radius="5.0" />
                    </effect>
                    <columns>
                        <TableColumn fx:id="colUserID" prefWidth="80.0" text="ID" />
                        <TableColumn fx:id="colUsername" prefWidth="180.0" text="Username" />
                        <TableColumn fx:id="colEmail" prefWidth="250.0" text="Email" />
                        <TableColumn fx:id="colRole" prefWidth="150.0" text="Role" />
                        <TableColumn fx:id="colActive" prefWidth="120.0" text="Active" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>

            </children>
        </AnchorPane>
    </children>
</AnchorPane>